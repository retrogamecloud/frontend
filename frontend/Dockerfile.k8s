# Frontend completo con juegos incluidos para Kubernetes
FROM node:20-alpine

WORKDIR /app

# Copiar package.json
COPY frontend/package.json ./

# Instalar dependencias
RUN npm install --production

# Copiar c√≥digo fuente del frontend
COPY frontend/ ./

# Copiar archivos de juegos
COPY juegos/ ./juegos/

# Usuario no-root
RUN addgroup -g 1001 -S nodejs && adduser -S nodejs -u 1001 && chown -R nodejs:nodejs /app

USER nodejs

# Puerto
EXPOSE 8081

# Comando
CMD ["node", "server.js"]
