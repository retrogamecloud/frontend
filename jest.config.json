{
  "testEnvironment": "node",
  "testMatch": [
    "**/tests/**/*.test.js"
  ],
  "collectCoverageFrom": [
    "server.js",
    "src/**/*.js",
    "!node_modules/**",
    "!score-tracker.js"
  ],
  "coveragePathIgnorePatterns": [
    "/node_modules/"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 70,
      "functions": 70,
      "lines": 70,
      "statements": 70
    }
  },
  "coverageReporters": ["text", "lcov", "html"],
  "verbose": true,
  "testTimeout": 10000
}
